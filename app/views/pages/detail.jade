extends ../layout

block content
  .container
    .row
      .col-md-1
      .col-md-10
        .dl-horizontal
          h3 #{article.title}
          br
          p 阅读量 #{article.pv} &nbsp;&nbsp;  发表日期 #{moment(article.meta.updateAt).format('MM/DD/YYYY')}
          br
          p !{article.content}
          br
      .col-md-1
     .row
      .col-md-1     
      .col-md-10
        .panel.panel-defatul
          .panel-heading
            h4 评论区
          .panel-body
            ul.media-list
              each item in comments
                li.media
                  .pull-left
                    a.comment(href="#comments", data-cid="#{item._id}", data-tid="#{item.from._id}")
                      //- p #{item.from}
                      img.media-object(src="#{item.from.avatar}", style="width: 44px; height: 44px;")
                      //- img.media-object(src="data:image/svg+xml;base64,", style="width: 64px; height: 64px;")
                  .media-body
                    h5.media-heading #{item.from.name}
                    p #{item.content}
                    if item.reply && item.reply.length > 0
                      each reply in item.reply
                        .media
                          .pull-left
                            a.comment(href="#comments", data-cid="#{item._id}", data-tid="#{reply.from._id}")
                              img.media-object(src="#{reply.from.avatar}", style="width: 44px; height: 44px;")
                              //- img.media-object(src="data:image/svg+xml;base64,", style="width: 64px; height: 64px;")
                          .media-body
                            h5.media-heading
                              | #{reply.from.name}
                              span.text-info &nbsp;回复&nbsp;
                              | #{reply.to.name}:
                            p #{reply.content}
                  hr
            #comments
              form#commentForm(method="POST", action="/user/comment")
                input(type="hidden", name="comment[article]", value="#{article._id}")
                if user
                  input(type="hidden", name="comment[from]", value="#{user._id}")
                .form-group
                  textarea.form-control(name="comment[content]", row="3")
                if user
                  button.btn.btn-primary(type='submit') 提交
                else
                  a.navbar-link(href="#", data-toggle="modal", data-target="#signinModal") 登录后评论
              br      
      .col-md-1            
      br  
  script(src="/build/detail.min.js")